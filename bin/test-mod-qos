#!/bin/bash

# this test launches some queries to fill up the wait queue for IP address 10.10.99.99.
# whilst they are running it launches enough queries to fill up the wait queue for 10.10.99.88
#   these should all succeed
# and immediately it launches some more queries for 10.10.99.88 which should be blocked


set -e

QUEUE_LIMIT=6

QUERY_URL="http://$TEST_HOST/landregistry/query?query=PREFIX+sd%3A+%3Chttp%3A%2F%2Fwww.w3.org%2Fns%2Fsparql-service-description%23%3E%0APREFIX+xsd%3A+%3Chttp%3A%2F%2Fwww.w3.org%2F2001%2FXMLSchema%23%3E%0APREFIX+lrppi%3A+%3Chttp%3A%2F%2Flandregistry.data.gov.uk%2Fdef%2Fppi%2F%3E%0APREFIX+lrcommon%3A+%3Chttp%3A%2F%2Flandregistry.data.gov.uk%2Fdef%2Fcommon%2F%3E%0A%0D%0A%09%09SELECT+%2A%0D%0A%09%09WHERE+%7B%0D%0A%09%09%09SERVICE+%3Chttp%3A%2F%2Flandregistry.data.gov.uk%2Flandregistry%2Fquery%3E+%7B%0D%0A%09%09%09%09VALUES+%3Ftown+%7B%22PLYMOUTH%22%7D%0D%0A%09%09%09%09%09%09%0D%0A%09%09%09%09%3Faddr+lrcommon%3Atown+%3Ftown.%0D%0A%0D%0A%09%09%09%09%3Ftransx+lrppi%3ApropertyAddress+%3Faddr+%3B%0D%0A%09%09%09%09lrppi%3ApricePaid+%3Famount+%3B%0D%0A%09%09%09%09lrppi%3AtransactionDate+%3Fdate+%3B%0D%0A%09%09%09%09lrppi%3ApropertyType+%3FpropertyType.%0D%0A%0D%0A%09%09%09%09OPTIONAL+%7B%3Faddr+lrcommon%3Acounty+%3Fcounty%7D%0D%0A%09%09%09%09OPTIONAL+%7B%3Faddr+lrcommon%3Apaon+%3Fpaon%7D%0D%0A%09%09%09%09OPTIONAL+%7B%3Faddr+lrcommon%3Asaon+%3Fsaon%7D%0D%0A%09%09%09%09OPTIONAL+%7B%3Faddr+lrcommon%3Astreet+%3Fstreet%7D%0D%0A%09%09%09%09OPTIONAL+%7B%3Faddr+lrcommon%3Apostcode+%3Fpostcode%7D%0D%0A%09%09%09%09%0D%0A%09%09%09%7D%0D%0A%09%09%09FILTER+%28%0D%0A%09%09%09%09%3Fdate+%3E+%222018-12-21%22%5E%5Exsd%3Adate+%26%26%0D%0A%09%09%09%09%3Fdate+%3C+%222019-06-21%22%5E%5Exsd%3Adate%0D%0A%09%09%09%29%0D%0A%09%09%09%0D%0A%09%09%7D%0D%0A%09"

# start with filling the queue for 10.10.99.99 with longish running queries
for i in $(seq 1 $QUEUE_LIMIT)
do
#  wget --header "X-Forwarded-For: 10.10.99.99" "$QUERY_URL" &
  curl -s -o /dev/null --header "X-Forwarded-For: 10.10.99.99" "$QUERY_URL"
done

# now launch the same requests for a different source IP address and check they are not blocked
for i in $(seq 1 $QUEUE_LIMIT)
do
 ( status=$(curl -s -o /dev/null -w "%{http_code}" --header "X-Forwarded-For: 10.10.99.88" "$QUERY_URL" ) ; if [ "$status" != "200" ] ; then  echo "test failed: request blocked" ; exit 1 ; fi ) &
 group2[${i}]=$!
done

# wait a bit to make sure all queries sent

sleep 2


# now launch the queries that should be blocked

for i in $(seq 1 $QUEUE_LIMIT)
do
 ( status=$(curl -s -o /dev/null -w "%{http_code}" --header "X-Forwarded-For: 10.10.99.88" "http://$TEST_HOST/landregistry/query" --data-urlencode "query=SELECT * {?s ?p ?o } LIMIT 10000" ) ; if [ "$status" != "403" ] ; then  echo "test failed: request not blocked" ; exit 1 ; fi ) &
 group2[${i}]=$!
done

# check all the tests passed

# wait for group 1 pids
for pid in ${group1[*]}; do
    wait $pid
done

# wait for group 2 pids
for pid in ${group2[*]}; do
    wait $pid
done

