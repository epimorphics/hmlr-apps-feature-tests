#!/bin/bash

# authenticate local docker with AWS ECR docker container repository
#
# Uses AWS credentials for the profile AWS_PROFILE, by default, this is 'lr'

set -e

SCRIPT_DIR=$( dirname "$0" )
source "$SCRIPT_DIR/dkr-config"


AWS_PROFILE=${AWS_PROFILE:-lr}

aws ecr get-login-password --profile "$AWS_PROFILE" | docker login --username AWS --password-stdin "$DKR_REGISTRY"/"$CONTAINER_NAME"